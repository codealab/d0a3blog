<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= simple_form_for @panel, :html => { :multipart => true, :class => 'form-horizontal'}  do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<p><%= f.input :name, label: "Nombre" %></p>
			<!-- <p><%= f.time_zone_select :timezone, nil, label: "Zona Horaria", :class => 'form-control' %></p> -->
			<p><%= f.input :quota_per_group, label: "Cuota por grupo" %></p>
			<p><%= f.input :child_age, label: "Edad permitida (mÃ¡ximo)" %></p>
			<%= image_tag @panel.logo.url(:thumb).to_s, :id => 'image_url' %>
			<p><%= f.input :logo, label: "logo" %></p>
			<p><%= f.submit "Guardar", :class => "btn btn-sm btn-primary" %></p>
		<% end %>
	</div>
</div>
<script>
	$(document).ready(function() {
		$('#panel_logo').imagePreview();
	});
</script>