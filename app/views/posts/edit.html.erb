        </aside>
    </div>
    <!-- comments -->
    <!--<%= render '/posts/comments' %>-->
    <!-- end comments -->
    <div class="sidebar col-md-4 col-lg-4 col-xl-3">
        <div id="container_special_coverage">
            <%= render 'sides/categories' %>
