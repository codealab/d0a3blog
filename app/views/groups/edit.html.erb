<% provide(:title, "Editar Grupo") %>
<div class="row">
	<div class="span4">
		<%= render 'groups/form' %>
	</div>

 <div class="span4 offset1">
	<h1>Inscritos</h1>
 </div>
 <% if(@childs) %>
 	<div class="span7 offset1">
 		<div id="enlist_childs">
			<% @childs.each do |c| %>
				<a href="#" class="child_selector child_<%= c.id %>" data-childid="<%= c.id %>" data-weeks="<%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %>">
					<div class="child_spot">
						<img src="/assets/kid.jpg" alt="<%= c.name %>" class="kid_photo">
						<div class="weeks_stat">
							<p><span><%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %></span><br>Semanas</p>
						</div>
						<div class="kid_stats">
							<p><%= c.name %></p>
							<p><%= ("#{ c.first_last_name } #{ c.second_last_name }").slice(0..13) %>.</p>
						</div>
						<div class="child_selected">
							activar
						</div>
					</div>
				</a>
			<% end %>
		</div>
		<div id="posibble_childs">
			<h2>Posibles</h2>
				<% @childs.each do |c| %>
				<a href="#" class="child_selector child_<%= c.id %>" data-childid="<%= c.id %>" data-weeks="<%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %>">
					<div class="child_spot">
						<img src="/assets/kid.jpg" alt="<%= c.name %>" class="kid_photo">
						<div class="weeks_stat">
							<p><span><%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %></span><br>Semanas</p>
						</div>
						<div class="kid_stats">
							<p><%= c.name %></p>
							<p><%= ("#{ c.first_last_name } #{ c.second_last_name }").slice(0..13) %>.</p>
						</div>
						<div class="child_selected">
							activar
						</div>
					</div>
				</a>
			<% end %>
		</div>
		<div id="not_possible">
			<h2>No Posibles</h2>
			<% @childs.each do |c| %>
				<a href="#" class="child_selector child_<%= c.id %>" data-childid="<%= c.id %>" data-weeks="<%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %>">
					<div class="child_spot">
						<img src="/assets/kid.jpg" alt="<%= c.name %>" class="kid_photo">
						<div class="weeks_stat">
							<p><span><%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %></span><br>Semanas</p>
						</div>
						<div class="kid_stats">
							<p><%= c.name %></p>
							<p><%= ("#{ c.first_last_name } #{ c.second_last_name }").slice(0..13) %>.</p>
						</div>
						<div class="child_selected">
							activar
						</div>
					</div>
				</a>
			<% end %>
		</div>
	</div>
<% end %>
</div>
<script>
	<%= render "/groups/edit.js.erb" %>
</script>