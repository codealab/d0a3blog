<% provide(:title, "Editar Grupo") %>
<div class="row">
	<div class="span4">
		<%= render 'groups/form' %>
	</div>

 <div class="span4 offset1">
	<h1>Inscritos</h1>
 </div>
 <div class="span7 offset1">
 	<div id="enlist_childs">
		<% @childs.each do |c| %>
			<a href="#" class="child_selector child_<%= c.id %>" data-childid="<%= c.id %>" data-weeks="<%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %>">
				<div class="child_spot">
					<img src="/assets/kid.jpg" alt="<%= c.name %>" class="kid_photo">
					<div class="weeks_stat">
						<p><span><%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %></span><br>Semanas</p>
					</div>
					<div class="kid_stats">
						<p><%= c.name %></p>
						<p><%= ("#{ c.first_last_name } #{ c.second_last_name }").slice(0..13) %>.</p>
					</div>
					<div class="child_selected">
						activar
					</div>
				</div>
			</a>
		<% end %>
	</div>
	<div id="posibble_childs">
		<h2>Posibles</h2>
		<% @childs.each do |c| %>
			<a href="#" class="child_selector child_<%= c.id %>" data-childid="<%= c.id %>" data-weeks="<%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %>">
				<div class="child_spot">
					<img src="/assets/kid.jpg" alt="<%= c.name %>" class="kid_photo">
					<div class="weeks_stat">
						<p><span><%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %></span><br>Semanas</p>
					</div>
					<div class="kid_stats">
						<p><%= c.name %></p>
						<p><%= ("#{ c.first_last_name } #{ c.second_last_name }").slice(0..13) %>.</p>
					</div>
					<div class="child_selected">
						activar
					</div>
				</div>
			</a>
		<% end %>
	</div>
	<div id="not_possible">
		<h2>No Posibles</h2>
		<% @childs.each do |c| %>
		<a href="#" class="child_selector child_<%= c.id %>" data-childid="<%= c.id %>" data-weeks="<%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %>">
			<div class="child_spot">
				<img src="/assets/kid.jpg" alt="<%= c.name %>" class="kid_photo">
				<div class="weeks_stat">
					<p><span><%= ((Date.today.to_date - c.dob.to_date).to_i)/7 %></span><br>Semanas</p>
				</div>
				<div class="kid_stats">
					<p><%= c.name %></p>
					<p><%= ("#{ c.first_last_name } #{ c.second_last_name }").slice(0..13) %>.</p>
				</div>
				<div class="child_selected">
					activar
				</div>
			</div>
		</a>
	<% end %>
	</div>
  </div>
</div>
<script>
	//Initialize vars on 0
	var min_age = parseInt('<%= @group.min_age %>'),
		max_age = parseInt('<%= @group.max_age %>');

	$(document).ready(function() {

		//Add hover to child_selector
		$('.child_selector').hover(function() {
			$(this).find('.child_selected').fadeIn(250);
		}, function() {
			if($(this).hasClass('child_active')){
				//Selector not xD
			}else{
				$(this).find('.child_selected').fadeOut(250);
			}
		});

		//To click add class child active
		$('.child_selector').on("click",function(){
			var childId = $(this).data('childid'),
				$$ = $('.child_'+childId);
				$$.addClass('child_active');
				$$.find('.child_selected').fadeIn(250);

			$.ajax({
				url: '/spots/create',
				type: 'GET',
				data: { child_id: childId, group_id: '<%= @group.id %>' },
			}).done(function() {
				$$.not("#enlist_childs .child_"+childId).fadeOut();
				$("#enlist_childs .child_"+childId).fadeIn();
			});
		});

		//To catch values from min, max inputs
		$("#group_min_age, #group_max_age").on('keyup', function(){
			var daValue = $(this).val();
			if($(this).attr('id')=='group_max_age') max_age = daValue;
			else min_age = daValue;
			//show kids with range
			showKids();
		});

		<% @group.spots.each do |c| %>
			$('.child_<%= c.child.id  %>').hide().addClass('child_active');
			$("#enlist_childs .child_<%= c.child.id  %>").show();
		<% end %>

	});

	function showKids(){
		$('.child_selector').each(function(i, index){
			var ageInWeeks = $(this).data('weeks'),
				childId = $(this).data('childid'),
				active = false;

			if($(this).hasClass('child_active')) active = true;
			if(ageInWeeks>=min_age && ageInWeeks<=max_age){
				if(!active) $('#posibble_childs .child_'+childId).fadeIn(200);
				$('#not_possible .child_'+childId).fadeOut(200);
			}else{
				$('#posibble_childs .child_'+childId).fadeOut(200);
				if(!active) $('#not_possible .child_'+childId).fadeIn(200);
			}
		});
	}

</script>
</div>