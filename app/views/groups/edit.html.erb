<% provide(:title, "Editar Grupo") %>

<div class="boton_der">
	<div class="top_buttons">
		<%= link_factory( :_path => groups_path, :_text => "Regresar a los Grupos", :_class=>'btn btn-info', :_button => true ) %>
	</div>
	<h1>Editar Grupo<span class="line"></span></h1>
</div>

<%= render 'groups/form' %>

<% if @group.can_destroy? || current_user.admin? %>
	<div class="boton_der">
		<%= link_factory( :_path => group_path(@group), :_text => "Borrar Grupo", :_class=>'btn btn-danger', :_button => true, :_alert => "¿Estás Seguro de borrar este grupo?", :_destroy => true ) %>
	</div>
<% end %>