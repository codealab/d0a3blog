<% provide(:title, "Grupo #{ @group.name }: #{@group.min_age} a #{@group.max_age} meses") %>
<div class="boton_der">
	<p>
	  <button type="button" class="btn btn-info"><%= link_to "Regresar a Grupos", groups_path %></button>
	</p>
	<p>
		<button type="button" class="btn btn-default"><%= link_to "Editar Grupo", edit_group_path(@group) %></button>
	</p>
</div>
<br><br><br>
<div class="panel panel-primary">
	<div class="group_info">
		<li><strong>Edad:</strong> <%= @group.min_age %> - <%= @group.max_age %></li>
		<li><strong>Periodo:</strong> <%= @group.init_date.strftime('%m/%d/%Y') %> - <%= @group.finish_date.strftime('%m/%d/%Y') %></li>
		<li><strong>Costo:</strong>$<%= @group.cost %></li>
		<li><strong>Ubicaci√≥n:</strong><%= @group.location %></li>
		<li><strong>Facilitadora:</strong><%= @group.facilitador %></li>
  </div>
</div>
<div class="col-md-12" id="container_lectures">
	<%= render 'groups/lectures' %>
</div>
<div class="boton_der">
	<% if @group.lectures.count > 3 %>
		<p><button type="button" class="btn btn-default"><%= link_to "Generar Clases", new_group_calendar_path(@group) %></button></p>
	<% end %>
	<p><button type="button" class="btn btn-default"><%= link_to "Nueva Clase", new_group_lecture_path(@group) %></button></p>
</div>
<div class="col-md-12">
	<%= render 'groups/spots'  %>
</div>

<script>
	$(document).ready(function() {
		<% if(@lecture) %>
		var lecture = "lecture_<%= @lecture.id %>";
		var totalTop = $("#lectures_dates").offset().top;
		var lectureTop = $("#"+lecture).offset().top;

		$("#"+lecture).addClass('success');
		$("#lectures_dates").animate({scrollTop:((lectureTop-totalTop)-75)},0);
		<% end %>

	});
</script>