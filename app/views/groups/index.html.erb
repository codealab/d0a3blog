<% provide(:title, "Nuestros Grupos") %>

<div class="boton_izq">
	<p>
	  <button type="button" class="btn btn-default"><%= link_to "Nuevo Grupo", new_group_path %></button>
	</p>
</div>

<h2>Total de Grupos: <%= @groups.count %></h2>

<table class="table table-striped">
<tr>
	<th>Grupo</th>
	<td>Facilitadora</td>
	<td>Costo</td>
	<td>Edad recomendada</td>
	<td>Inicio de curso</td>
	<td>Fin de curso</td>
	<td>ubicaci√≥n</td>
</tr>
	<% @groups.each do |group| %>
		<tr>
			<td><%= link_to group.name, group %></td>
			<td><%= group.user.name %></td>
			<td><%= group.cost %></td>
			<td><%= "De #{group.min_age} a #{group.max_age} Semanas" %></td>
			<td><%= group.init_date.strftime('%m/%d/%Y') %></td>
			<td><%= group.finish_date.strftime('%m/%d/%Y') %></td>
			<td><%= group.location %></td>
		</tr>
	<% end %>
</table>