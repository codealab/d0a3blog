var errors = parseInt("<%= @lecture.errors.count %>");
$("#time_select_lecture").modal("hide");
if (errors == 0) {
    var eventData;
    eventData = {
        title: "Clase",
        url: '<%= "/groups/relations/#{@group.id}?lecture_id=#{@lecture.id}" %>',
        start: '<%= @lecture.date.strftime("%F") %>'
    };
    $('#calendar').fullCalendar('renderEvent', eventData, true);
} else {
    $("#errors_lecture_modal").modal("show");
    $("#error_success").html("<%= escape_javascript(render('lecture')) %>");
}