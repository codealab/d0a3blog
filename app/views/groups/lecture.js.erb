var lecture = "<%= @new_lecture %>";
if (lecture == "true") {
    $("#time_select_lecture").modal("hide");
    var eventData;
    eventData = {
        title: "Clase",
        start: '<%= @lecture.date.strftime("%F") %>'
    };
    $("#error_success").fadeOut(300, function() {
        $(this).html("Clase creada exitosamente").addClass("alert alert-success").removeClass('alert-danger').fadeIn(300);
    });
    $('#calendar').fullCalendar('renderEvent', eventData, true);
} else {
    $("#time_select_lecture").modal("hide");
    $("#error_success").fadeOut(300, function() {
        $(this).html("No se pudeden crear clases en d√≠as pasados").addClass("alert alert-danger").removeClass('alert-success').fadeIn(300, function() {
            $(this).delay(3000).fadeOut(300);
        });
    });
}