<h1>Inscritos<span class="line"></span></h1>
<% if(@group.spots.empty?) %>
	<h2>No hay spots</h2>
<% else %>
	<table class="table table-striped">
		<tr>
			<th>Spot</th>
			<th>Ni√±o</th>
			<th>Cuidador</th>
			<th>Pagos</th>
			<th>Saldo</th>
		</tr>
		<% @group.spots.each_with_index do |spot,index| %>
			<tr>
				<td>
					<%= link_factory( :_path => group_spot_path(@group, spot), :_text => "Spot - #{index}" ) %>
				</td>
				<td>
					<%= link_factory( :_path => person_path(spot.child.id), :_text => spot.child_name ) %>
				</td>
				<td>
					<% if(spot.tutor) %>
						<%= link_factory( :_path => person_path(spot.tutor.id), :_text => spot.tutor_name ) %>
					<% end %>
				</td>
				<td>$<%= total_payments spot %></td>
				<td>$<%= spot.balance %></td>
			</tr>
		<% end %>
	</table>
<% end %>