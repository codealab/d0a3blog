<h1>Inscritos</h1>
<% if(@group.spots.empty?) %>
	<!--<h2>No hay spots</h2>
	<p>
		<button type="button" class="btn btn-default"><%= link_to "Nuevo Spot", new_group_spot_path(@group) %></button>
	</p>-->
<% else %>
	<table class="table table-striped">
		<tr>
			<th>Ni√±o</th>
			<th>Cuidador</th>
			<th>Pagos</th>
			<th>Saldo</th>
		</tr>
		<% @group.spots.each do |spot| %>
			<tr>
				<td><%= link_to "#{spot.child.name} #{spot.child.first_last_name} #{spot.child.second_last_name}", group_spot_path(@group, spot) %></td>
				<td><% if(spot.tutor) %><%= "#{spot.tutor.name} #{spot.tutor.first_last_name} #{spot.tutor.second_last_name}" %><% end %></td>
				<% total = 0 %>
				<% spot.payments.each do |p| %>
					<% total = total + p.amount %>
				<% end %>
				<td>$<%= total %></td>
				<td>$<%= @group.cost-total %></td>
			</tr>
		<% end %>
	</table>
<% end %>