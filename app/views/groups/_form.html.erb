<div class="boton_der">
	<p>
	  <button type="button" class="btn btn-info"><%= link_to "Regresar a los Grupos", groups_path %></button>
	</p>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
	  	<h1>Datos del grupo</h1>
		<%= simple_form_for @group, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.input :name, label:"Nombre del Grupo" %>
			<%= f.input :user_id, label:"Facilitador", include_blank: true, collection: User.facilitadores.map {|p| [ p.name, p.id ] } %>
			<%= f.input :min_age, label:"Edad mínima (Semanas)" %>
			<%= f.input :max_age, label:"Edad máxima (Semanas)" %>
			<span id="selector_fecha">
				<%= f.input :init_date, label: "Inicio de curso", include_blank: true, :order => [:day, :month, :year], :start_year => Time.now.year-1, :end_year => Time.now.year+1 , :input_html => { :class => 'date_selector' } %>
			</span>
			<span id="selector_fecha">
				<%= f.input :finish_date, label: "Fin de curso", include_blank: true, :order => [:day, :month, :year],:start_year => Time.now.year-1, :end_year => Time.now.year+1, :input_html => { :class => 'date_selector' }  %>
			</span>
			<br><%= f.input :cost, label: "Costo" %>
			<%= f.input :location, label: "Ubicación" %> <br>
			<p><%= f.submit "Guardar", class: "btn btn-sm btn-primary" %></p>
		<% end %>
	</div>
</div>