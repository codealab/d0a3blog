<div class="row">
	<div class="col-md-4 col-md-offset-4">
	  	<h1>Datos del grupo</h1>
		<%= simple_form_for @group, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<%= f.input :name, label:"Nombre del Grupo" %>
			<%= f.input :user_id, label:"Instructor", include_blank: true, collection: User.instructors.map { |p| [ p.name, p.id ] } %>
			<%= f.input :assistant_id, label:"Asistente", include_blank: true, collection: User.instructors.map { |p| [ p.name, p.id ] } %>
			<%= f.input :min_age, label:"Edad mínima (Semanas)" %>
			<%= f.input :max_age, label:"Edad máxima (Semanas)" %>
			<% if params[:action] == 'edit' %>
				<%= f.input :cost, label: "Costo del grupo por alumno", disabled: true %>
			<% else %>
				<span class="glyphicon glyphicon-info-sign info pops" data-container="body" data-toggle="popover" data-placement="right" data-content="Este es el costo que tiene que cubrir cada alumno por la duración total del curso." data-original-title="" title="" style="position: relative; left: 210px; top: 20px;"></span>
				<%= f.input :cost, label: "Costo del grupo por alumno" %>
			<% end %>
			<%= f.input :location, label: "Ubicación" %><br>
			<span id="selector_fecha">
				<%= f.input :init_date, label: "Inicio de curso", include_blank: true, :order => [:day, :month, :year], :start_year => Time.now.year-1, :end_year => Time.now.year+1 , :input_html => { :class => 'date_selector' } %>
			</span>
			<span id="selector_fecha">
				<%= f.input :finish_date, label: "Fin de curso", include_blank: true, :order => [:day, :month, :year],:start_year => Time.now.year-1, :end_year => Time.now.year+1, :input_html => { :class => 'date_selector' }  %>
			</span>
			<% if params[:action]=='new' %>
				<p><%= f.submit "Crear Grupo", class: "btn btn-sm btn-primary" %></p>
			<% else %>
				<p><%= f.submit "Guardar Grupo", class: "btn btn-sm btn-primary" %></p>
			<% end %>
		<% end %>
	</div>
</div>