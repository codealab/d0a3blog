<% if(@group.lectures.empty?) %>
		<h1>No Hay Clases</h1>
	<% else %>
	<h1>Clases<span class="line"></span></h1>
	<table class="table table-striped">
		<tr>	
			<th>Fecha</th>
			<th>Hora</th>
			<th>Observaci√≥n</th>
			<th>Editar</th>
			<!--<th>Borrar</th>-->
		</tr>	
		<% @group.lectures.each do |lecture| %>
			<tr>
				<td><%= link_to "#{lecture.date.strftime('%m/%d/%Y')}", group_lecture_path(@group, lecture) %></td>
				<td><%= lecture.date.strftime('%I:%M %p') %></td>
				<td><%= lecture.observation %></td>
				<td><button type="button" class="btn btn-default btn-xs"><%= link_to "Editar Clase", edit_group_lecture_path(@group, lecture) %></button></td>
				<!--<td><button type="button" class="btn btn-danger btn-xs"><%= link_to "Borrar Clase", group_lecture_path(@group, lecture), method: :delete, data: { confirm: "Estas Seguro?" } %></button></td>-->
			</tr>
		<% end %>
	</table>
<% end %>