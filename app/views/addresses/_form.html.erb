<div class="row">
	<div class="col-md-4 col-md-offset-4">
	<%= simple_form_for [@family, @address], :html => {:multipart => true, :class => 'form-horizontal'}  do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
		<p><%= f.input :calle, label: "Calle" %></p>
		<p><%= f.input :num_ext, label: "Número Exterior" %></p>
		<p><%= f.input :num_int, label: "Número Interior" %></p>
		<p><%= f.input :localidad, label: "Localidad" %></p>
		<p><%= f.input :referencia, label: "Referencia" %></p>
		<p><%= f.input :colonia, label: "Colonia" %></p>
		<p><%= f.input :municipio, label: "Delegación o Municipio" %></p>
		<% if @address.calle %>
			<p><%= f.input :ciudad, label: "Ciudad" %></p>
			<p><%= f.input :estado, label: "Estado" %></p>
			<p><%= f.input :pais, label: "País" %></p>
		<% else %>
			<p><%= f.input :ciudad, :input_html => { :value => "México" }, label: "Ciudad" %></p>
			<p><%= f.input :estado, :input_html => { :value => "Distrito Federal" }, label: "Estado" %></p>
			<p><%= f.input :pais, :input_html => { :value => "México" }, label: "País" %></p>
		<% end %>
		<p><%= f.input :codigo_postal, label: "Código Postal" %></p>
		<p><%= f.input :telefono, label: "Teléfono" %></p>
		<p><%= f.input :celular, label: "Celular" %></p>
		<p><%= f.input :email, label: "Email" %></p>
		<% if params[:action]=='new' %>
			<p><%= f.submit "Crear Dirección", class: "btn btn-sm btn-primary" %></p>
		<% else %>
			<p><%= f.submit "Guardar Dirección", class: "btn btn-sm btn-primary" %></p>
		<% end %>
	<% end %>
  </div>
</div>