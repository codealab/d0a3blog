<div class="boton_der">
	<p>
	  <button type="button" class="btn btn-info"><%= link_to "Regresar a Socios", families_path %></button>
	</p>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
	<%= simple_form_for @family, :html => { :class => "form-horizontal" } do |f| %> 
		<%= render 'shared/error_messages', object: f.object %>
		<%= f.input :name, label: "Nombre de la familia" %> <br>
		<%= f.button :submit, "Crear Familia" %>
	<% end %>
  </div>
</div>