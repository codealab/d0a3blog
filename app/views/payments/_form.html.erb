<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= simple_form_for [@group, @spot, @payment] do |f| %>
		<%= render 'shared/error_messages', object: f.object %>
			<p>
			<div id="selector_fecha">
				<%= f.input :date, label: "Fecha", :order => [:day, :month, :year], :include_blank => true, :start_year => Date.today.year, :end_year =>Date.today.year-1, :input_html => { :class => 'date_selector' }  %>
			</div>
			<%= f.input :concept_id, label: "Concepto", :include_blank => true, collection: Concept.all.collect {|p| [ "#{p.name}", p.id ] } %>
		</p>
			<p><button class="btn btn-sm btn-primary">NUEVO PAGO</button></p>
			<p><%= f.input :amount, label: "Cantidad" %></p>
			<p><%= f.input :scholarship, label: "Pago extr." %></p>
			<p><%= f.input :clarification %></p>
			<p><%= f.submit "Guardar", class: "btn btn-sm btn-primary" %></p>
		<% end %>
	</div>
</div>