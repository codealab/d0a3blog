<div class="panel panel-primary">
	<div class="group_info">
		<li><strong>Fecha:</strong> <%= @lecture.date.strftime('%m/%d/%Y') %></li>
		<li><strong>Hora:</strong> <%= @lecture.date.strftime('%I:%M %p') %></li>
  </div>
</div>
<h1>Ejercicios</h1>
<div class="all_width">
	<table class="table table-striped">
		<tr>	
		<th>Ejercicio</th>
			<th>Objetivo</th>
			<th>Descripción</th>
			<th>Material</th>
			<th>Área</th>
		</tr>
		<% @lecture.exercises.each do |ex| %>
			<tr>
				<td><%= ex.objective %></td>
				<td><%= ex.description %></td>
				<td><%= ex.material %></td>
				<td><%= ex.area %></td>
			</tr>
		<% end %>
	</table>
</div>
<div class="boton_der">
	<p>
		<button type="button" class="btn btn-default btn-xs"><%= link_to "Seleccionar Ejercicios",  group_lecture_exercises_path(@group, @lecture) %></button>
	</p>
</div>
<h1>Asistencia</h1>
<div id="attendances" class="all_width">
	<div id="scroll_attendances">
		<% @lecture.attendances.each do |c| %>
			<div class="child_attendance" id="child_spot_<%= c.person.id %>">
				<img src="<%= c.person.photo %>" alt="<%= c.person.name %>" class="kid_attendance_photo">
				<div class="kid_stats">
					<p><%= c.person.name %></p>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="boton_der">
	<p>
		<button type="button" class="btn btn-default btn-xs"><%= link_to "Tomar Asistencia",  new_group_lecture_attendance_path(@group, @lecture) %></button>
	</p>
</div>
<h1>Observación</h1>
<div class="all_width">
	<p><%= @lecture.observation %></p>
</div>
<div class="boton_der">
	<p>
		<button type="button" class="btn btn-danger btn-xs"><%= link_to "Borrar Clase", group_lecture_path(@group, @lecture), method: :delete, data: { confirm: "Estas Seguro?" } %></button>
	</p>
	<p>
		<button type="button" class="btn btn-default btn-xs"><%= link_to "Editar Clase", edit_group_lecture_path(@group, @lecture) %></button>
	</p>
</div>