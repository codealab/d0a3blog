<div class="boton_der">
	<p>
	  <button type="button" class="btn btn-info"><%= link_to "Regresar a Grupo", group_path(@group) %></button>
	</p>
</div>
<div class="row">
	<div class="col-md-4 col-md-offset-4">
	  	<h1>Datos del grupo</h1>
	  	<%= simple_form_for @calendar, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
	  		<%= render 'shared/error_messages', object: f.object %>
				<p>
					<%= label_tag :init_date, 'Inicio de curso' %>
					<%= text_field_tag :init_date, nil, value: @group.init_date, :readonly => true, :class => 'disabled form-control' %>
				</p>
				<%= f.number_field :group_id, value: @group.id, :readonly => true, :class => 'disabled form-control', :type=>"hidden" %>
				<p>
					<%= label_tag :finish_date, 'Fin de curso' %>
					<%= text_field_tag :finish_date, nil, value: @group.finish_date, :readonly => true, :class => 'disabled form-control' %>
				</p>
				<p>
					<%= f.label "days", 'Días de clases' %>
				</p>
					<% dias = ['Lunes','Martes','Miércoles','Jueves','Viernes'] %>
					<% days_symbols = [:monday, :tuesday, :wednesday, :thursday, :friday] %>
					<% hours = [ :monday_hour, :tuesday_hour, :wednesday_hour, :thursday_hour, :friday_hour ] %>
					<% dias.each_with_index do |day,index| %>
						<div class="col-md-12 time_selector">
							<div class="col-md-5">
								<%= f.check_box days_symbols[index] %>
								<%= f.label days_symbols[index], dias[index] %>
							</div>
							<div class="col-md-7">
								<%= f.time_select hours[index], { include_blank: true, :minute_step => 30, :time_separator => "", :start_hour => 7, :end_hour => 21 }, :class => "form-control time_select" %>
							</div>
						</div>
					<% end %>
				<br>
			<p><%= f.submit "Guardar", class: "btn btn-sm btn-primary" %></p>
		<% end %>
	</div>
</div>
<script>
	$(document).ready(function() {
		$('input:checkbox').on("click",function(){
			var day = $(this).attr('id');
			$(this).is(':checked')? $("#"+day+"_hour_4i, #"+day+"_hour_5i").show().attr('required', 'required') : $("#"+day+"_hour_4i, #"+day+"_hour_5i").hide().removeAttr('required');
		});
	});
</script>