<% provide(:title, 'Todos los Usuarios') %>
<% if current_user.admin? %>
	<div class="boton_der">
		<p>
			<button type="button" class="btn btn-default"><%= link_to "Nuevo Usuario", new_user_path %></button>
		</p>
	</div>
<% end %>

<table class="table table-striped">
<tr>
	<th>Usuario</th>
	<th>Email</th>
	<th>Administrador</th>
	<th>Facilitador</th>
	<th>Coordinador</th>
	<% if current_user.admin? %>
		<th>Editar</th>
		<th>Eliminar</th>
	<% end %>
</tr>
<% @users.each do |user| %>
<tr>
	<td><%= link_to user.name, user %></td>
	<td><%= user.email %></td>
	<% if user.admin %><td>Sí</td><% else %><td>No</td><% end %>
	<% if user.facilitator %><td>Sí</td><% else %><td>No</td><% end %>
	<% if user.coordinator %><td>Sí</td><% else %><td>No</td><% end %>
	<% if current_user.admin? %>
		<th><button type="button" class="btn btn-default btn-xs"><%= link_to "Editar", edit_user_path(user)  %></button></th>
		<% if !current_user?(user) %>
			<th><button type="button" class="btn btn-danger btn-xs"><%= link_to "Borrar", user, method: :delete, data: { confirm: "¿Estás seguro de borrar a #{user.name}?" } %></button></th>
		<% else %>
			<th>
				<button type="button" class="btn btn-danger btn-xs disabled">Borrar</button>
			</th>
		<% end %>
	<% end %>
</tr>
<% end %>
</table>