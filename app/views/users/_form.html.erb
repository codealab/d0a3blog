<div class="boton_der">
	<p>	<button type="button" class="btn btn-info"><%= link_to "Regresar a Usuarios", users_path %></button></p>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for @user, :html => {:multipart => true, :class => 'form-horizontal'} do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
			<p><%= f.input :name, label:"Nombre" %></p>
			<% if @user.photo_url.to_s.include?('user/default') %>
				<img src="" id="image_url" alt="">
			<% else %>
				<%= image_tag @user.photo_url.to_s, id: 'image_url' %>
			<% end %>
			<p><%= f.input :photo, label:"Foto" %></p>
			<p><%= f.input :email, label:"Email" %></p>
		<% if current_user.admin? %>
			<% if !current_user?(@user) %>
				<p><%= f.input :admin, label:"Administrador" %></p>
			<% end %>
				<p><%= f.input :coordinator, label:"Coordinador" %></p>
				<p><%= f.input :facilitator, label:"Facilitador" %></p>
		<% end %>
		<% if params[:action] == 'new' || params[:action] == 'create' %>
			<p><%= f.input :password, label:"Contrase침a" %></p>
			<p><%= f.input :password_confirmation, label:"Confirmaci칩n de Contrase침a" %></p>
		<% end %>
		<p><%= f.submit "Guardar", class: "btn btn-sm btn-primary" %></p>
    <% end %>
  </div>
</div>
<% if params[:action] == 'edit' %>
	<div class="boton_der">
		<p><button type="button" class="btn btn-default"><%= link_to "Cambiar contrase침a", edit_password_reset_path(@user) %></button></p>
	</div>
<% end %>

<script>
	$(document).ready(function($) {
	    $('#user_photo').imagePreview();
	});
</script>