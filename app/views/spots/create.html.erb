<div class="child_spot" id="child_spot_<%= @spot.child.id %>">
	<img src="<%= @spot.child.photo_url(:thumb) %>" alt="<%= @spot.child.name %>" class="kid_up_photo">
	<div class="kid_stats">
		<p><%= @spot.child.name %></p>
		<p><%= ("#{ @spot.child.first_last_name } #{ @spot.child.second_last_name }").slice(0..13) %>.</p>
	</div>
	<div class="child_remove">
		<a href="/spots/destroy?id=<%= @spot.id %>&group_id=<%= @group.id %>" data-remote="true" class="<% if(@spot.can_destroy?) %>inscrito <% end %>">
			<span class="remove"></span>
		</a>
	</div>
</div>