<div class="child_spot child_appended" id="child_spot_<%= @attendance.spot.child.id %>">
	<% if @attendance.spot.child.photo_url.include?('/default/') %>
		<img src="<%= @attendance.spot.child.photo_url %>" alt="<%= @attendance.spot.child.name %>" class="kid_up_photo">
	<% else %>
		<img src="<%= @attendance.spot.child.photo_url(:thumb) %>" alt="<%= @attendance.spot.child.name %>" class="kid_up_photo">
	<% end %>
	<div class="kid_stats">
		<p><%= @attendance.spot.child.name %></p>
	</div>
	<% if @attendance.can_destroy? %>
		<div class="child_remove">
			<a href="/attendances/destroy?id=<%= @attendance.id %>&lecture_id=<%= @lecture.id %>" data-remote="true">
				<span class="remove"></span>
			</a>
		</div>
	<% end %>
</div>