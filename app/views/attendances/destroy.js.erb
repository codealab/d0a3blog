var total_attendances = parseInt("<%= @lecture.attendances.count %>");
$("#total_attendances span").html(total_attendances);
$(".child_<%= @child.id %>").css({opacity:0,top:30}).show().animate({opacity:1,top:0},600,'easeOutQuart');
$("#child_spot_<%= @attendance.spot.child.id %>").remove();
$(".child_<%= @attendance.spot.child.id %>").find('.child_selected').hide();

if(total_attendances>0) $("#alert_attendances").hide();
else $("#alert_attendances").show();