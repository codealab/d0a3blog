<% provide(:title, "Programa de #{@program.min_age} - #{@program.max_age} semanas") %>

<div class="boton_der">
	<div class="top_buttons">
		<%= link_factory( :_path => programs_path, :_text => "Regresar a Programas", _class: 'btn btn-info', _button: true ) %>
	</div>
	<h1><%= "Programa de #{@program.min_age} - #{@program.max_age} semanas" %><span class="line"></span></h1>
</div>
<div class="all_width light_box">
	<h4><%= @program.name %></h4>
	<div class="under_pressure"></div>

	<div class="blue_box all_width">
		<% lectures = @program.lectures.to_i %>
		<% lectures.times do |lecture| %>
			<div class="col-md-3">
				<a href="/programs/exercises/<%= @program.id %>?lecture_id=<%= lecture+1 %>" class="add_lectures_to_day" data-remote="true">
					<div class="white_box all_width text_center">
						<%= "Clase #{lecture+1}" %>
						<div class="under_pressure"></div>
						<div id="day_<%= lecture+1 %>"></div>
					</div>
				</a>
				<div class="spacer"></div>
			</div>
		<% end %>
	</div>

	<div class="spacer"></div>
	
	<div id="add_lectures_to_day">
		<!-- render -->
	</div>

</div>
<script>
	$(document).ready(function() {
		$(".add_lectures_to_day").on("click",function(){
			$("#").fadeIn();
		});
	});
</script>