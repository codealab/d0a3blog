<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= simple_form_for @program, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<p><%= f.input :name, label:"Nombre del programa" %></p>
			<% if params[:action]=='edit' %>
				<p><%= f.input :number_of_lessons, label:"Número de lecciones", :disabled => true %></p>
			<% else %>
				<p><%= f.input :number_of_lessons, label:"Número de lecciones" %></p>
			<% end %>
			<p><%= f.input :min_age, label:"Edad mínima (Semanas)" %></p>
			<p><%= f.input :max_age, label:"Edad máxima (Semanas)" %></p>
			<p><%= f.input :description, label:"Descripción" %></p>
			<% if params[:action]=='new' %>
				<p><%= f.submit "Crear Programa", class: "btn btn-sm btn-primary" %></p>
			<% else %>
				<p><%= f.submit "Guardar Programa", class: "btn btn-sm btn-primary" %></p>
			<% end %>
		<% end %>
	</div>
</div>