<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<%= simple_form_for @program, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
			<%= render 'shared/error_messages', object: f.object %>
			<p><%= f.input :name, label:"Nombre del programa" %></p>
			<p><%= f.input :lectures, label:"Número de clases" %></p>
			<p><%= f.input :min_age, label:"Edad mínima (Semanas)" %></p>
			<p><%= f.input :max_age, label:"Edad máxima (Semanas)" %></p>
			<p><%= f.input :description, label:"Descripción" %></p>
			<p><%= f.submit "Guardar", class: "btn btn-sm btn-primary" %></p>
		<% end %>
	</div>
</div>