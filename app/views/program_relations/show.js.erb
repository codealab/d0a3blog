$("#refresh_programs_relations").fadeOut(function() {
    $(this).html("<%= escape_javascript(render('show')) %>").fadeIn(function() {
        $('.tiny_scroll').each(function() {
            var tinyScroll = $(this);
            tinyScroll.tinyscrollbar();
            var newScroll = tinyScroll.data("plugin_tinyscrollbar");
            newScroll.update();
        });
    });
});