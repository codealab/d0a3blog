<% provide(:title, 'Todos los Ejercicios') %>

<div class="boton_der">
	<p>
	  <button type="button" class="btn btn-default"><%= link_to "Nuevo Ejercicio", new_exercise_path %></button>
	</p>
</div>

<h2>Total de Ejercicios: <%= @exercises.count %></h2>

<table class="table table-striped">
<tr>
	<th>Area</th>
	<th>Rango de edad</th>
	<th>Objetivo</th>
